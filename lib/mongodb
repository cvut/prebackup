#!/usr/local/bin/prebackup
# vim: set ft=sh ts=4:
#
# Variables:
#   mongo_user     : Username for authentication (optional).
#   mongo_password : Password for authentication (optional).
#   exclude_dbs    : An array of database names to exclude from backup (optional).

setup() {
	if [ -n "$exclude_dbs" ] && ! is-array exclude_dbs; then
		fail 'Variable $exclude_dbs must be an array!'
	fi
	exclude_dbs+=()
}

pre-backup() {
	local dbname
	local opts='--quiet'
	local list_dbs="db.adminCommand({listDatabases: 1})['databases'].forEach(function(e) { print(e.name) });"

	if [ -n "$mongo_user" ]; then
		opts+=" --username=$mongo_user --password=$mongo_password --authenticationDatabase=admin"
	fi

	mongo $opts --norc --eval="$list_dbs" | while read -r dbname; do

		if is-member "$dbname" "${exclude_dbs[@]}"; then
			info "Skipping database $dbname"
		else
			info "Dumping database $dbname"
			mongodump $opts --db "$dbname" --out="$target_dir"
		fi
	done
}

post-backup() {
	if [ ! -d "$target_dir" ]; then
		fail "$target_dir does not exist or not a directory!"
	fi
	rm -Rf "$target_dir"/*
}
